<Page x:Class="CoLab.HostMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoLab"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HostMenu">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Background" Value="FloralWhite"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        

        <Grid.RowDefinitions>
            <RowDefinition Height="45*" MinHeight="90" MaxHeight="200"/>
            <RowDefinition Height="10*" MinHeight="82" MaxHeight="82"/>
            <RowDefinition Height="41*" MinHeight="82" MaxHeight="82"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="41*" MinHeight="82" MaxHeight="82"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="0"/>
            <ColumnDefinition Width="300" MinWidth="100"/>
            <ColumnDefinition MinWidth="0"/>

        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="1"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch">
            <TextBlock  Text="Host"
                    Grid.Column="1"
                       Foreground="#FFB22B50"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       FontWeight="Medium" FontFamily="Whimsy TT"/>
        </Viewbox>

        <Button Click="NewProject_Click"
                Content="New Project" 
                Grid.Column="1" Grid.Row="1" 
                MinWidth="175"
                MaxHeight="80" Margin="34,24,34,27">
            <Button.ContentTemplate>
                <DataTemplate>
                    <Viewbox>
                        <TextBlock>New Project</TextBlock>
                    </Viewbox>
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>

        <Button Click="ExistingProject_Click"
                Content="Existing Project" 
                Grid.Column="1" Grid.Row="2" 
                MinWidth="175"
                MaxHeight="80" Margin="34,24,34,27">
            <Button.ContentTemplate>
                <DataTemplate>
                    <Viewbox>
                        <TextBlock>Existing Project</TextBlock>
                    </Viewbox>
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>

        <Button Click="Back_Click"
                Content="Back" 
                Grid.Column="1" Grid.Row="4" 
                MinWidth="175"
                MaxHeight="80" Margin="34,24,34,27">
            <Button.ContentTemplate>
                <DataTemplate>
                    <Viewbox>
                        <TextBlock>Back</TextBlock>
                    </Viewbox>
                </DataTemplate>
            </Button.ContentTemplate>
        </Button>
    </Grid>

</Page>
